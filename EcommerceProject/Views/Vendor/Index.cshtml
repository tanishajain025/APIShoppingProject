@model IEnumerable<EcommerceProject.Models.Vendor>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<style>
    .btn1 {
        margin-right: 1000px;
        margin-top: -10px;
    }
</style>
<h2>Vendor Details</h2>
<br />
&nbsp;&nbsp;
<a asp-controller="Vendor" asp-action="Create">
    <button type="button" class="btn btn-info btn1">Create</button>
</a>
&nbsp;&nbsp;&nbsp;&nbsp;
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.VendorId)</th>
            <th>@Html.DisplayNameFor(model => model.VendorName)</th>
            @*<th>@Html.DisplayNameFor(model => model.EmailId)</th>
                <th>@Html.DisplayNameFor(model => model.PhoneNo)</th>
                <th>@Html.DisplayNameFor(model => model.VendorDescription)</th>*@

            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ordr in Model)
        {

            <tr>
                <td>@Html.DisplayFor(modelItem => ordr.VendorId)</td>
                <td>@Html.DisplayFor(modelItem => ordr.VendorName)</td>
                @*<td>@Html.DisplayFor(modelItem => ordr.EmailId)</td>
                    <td>@Html.DisplayFor(modelItem => ordr.PhoneNo)</td>
                    <td>@Html.DisplayFor(modelItem => ordr.VendorDescription)</td>*@


                <td>
                    <a class="btn btn-dark" asp-controller="Vendor" asp-action="Details"
                       asp-route-id="@ordr.VendorId">Details</a>|
                    <a class="btn btn-info" asp-controller="Vendor" asp-action="Edit"
                       asp-route-id="@ordr.VendorId">Edit</a>|
                    <a class="btn btn-danger" asp-controller="Vendor" asp-action="Delete"
                       asp-route-id="@ordr.VendorId">Delete</a>
                </td>


            </tr>
        }
    </tbody>
</table>

